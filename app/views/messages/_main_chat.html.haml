.chat-main
  .chat-main__group-info
    .chat-main__group-info__group-in
      .chat-main__group-info__groupitira
        = @group.name
      .chat-main__group-info__mememe
        - @group.users.each do |user|
          = user.name
    .chat-main__group-info__2
      = link_to edit_group_path(@group.id), class: "edit-btn" do
        = icon('fas', 'user-edit')
  .message
    = render @messages
